section#contactus
    #c1.column
        background #f3f3f3
        .container
            .column
                h3
                    margin-top 50px
                    color grayC
                p
                    margin-top 30px
                .cards
                    display flex
                    justify-content space-around
                    align-items stretch
                    margin-top 30px
                    margin-bottom 50px
                    .b-card
                        margin 10px                        
                        box-shadow: 0px 0px 15px 1px #777
                        overflow hidden
                        &:hover .b-card__img.card-img
                            transform scale(1.5)

                        .b-card__img
                            transition background 1.4s ease
                            padding 0px
                            position relative
                            .card-img
                                display block
                                position absolute
                                top 0
                                left 0
                                z-index 0
                            .icon
                                position absolute
                                top 50%
                                left 40%
                                display block
                                z-index 4
                                font-size 55px
                                color lightC
                                margin 30px 0px 0px
                        .b-card__title
                            margin-top 150px
                            background lightC
                            color grayC
                            flex-direction column
                            justify-content center
                            align-items center
                            height auto 
                            .card-title
                                margin 0
                                font-size 18px
                                font-weight 400
                                font-family mainFont
                            .card-desk
                                font-size 16px
                                margin-top 0px
                                margin-bottom 40px
    #c2.column
        background #fff
        .conteiner
            form
                padding 30px
                
                .column
                    .row
                        width 100%
                        padding 0 -20px
                        input 
                            height 30px
                            font-size 18px
                            margin-right 20px
                            margin-bottom 20px
                            text-align center
                            width calc((100%-40px)/3)
                        input:nth-child(3)
                                margin-right 0px
                    textarea
                        width 100%
                        height 200px
                        padding 0 0px
                    button 
                        width 100%
                        height 34px
                        cursor pointer
                        padding 2px 25px
                        margin 20px
                        background mainC
                        color lightC
                        border 1px solid transparent
                        transition all .5s ease

                        &:hover
                            border 1px solid lightC
                            box-shadow 0px 0px 2px 2px lightC
    #c3.column
        position relative
        overflow hidden
        &:hover .b-cover
            transform translateY(-100%)
        .b-cover
            .b-cover__title
                margin-top 10%
                h3
                    span 
                        color red



            
