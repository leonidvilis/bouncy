section#ourprice
    background bgC
    .container
        .column
            h3
                margin-top 30px
            p
                margin-top 30px
            .cards
                display flex
                justify-content space-around
                align-items stretch
                margin-top 30px
                margin-bottom 50px
                .b-card
                    margin 10px
                    box-shadow: 0px 0px 15px 1px #777
                    .b-card__title
                        h4
                            text-transform uppercase
                        a
                            text-decoration none
                            color lightC
                            h4
                                span.pe-7s-angle-right
                                    color lightC
                                    font-size 18px
                    .b-card__body
                        h4
                            span
                                font-size 2em
                                font-family secondFont
                        ul
                            li
                                list-style-type none 