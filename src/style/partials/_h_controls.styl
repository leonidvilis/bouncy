// Контрол для галереи портфолио
.b-gallery
    width 100%
    .b-gallery__toggles

        .b-gallery__btn
            background-color transparent
            border-color: transparent
            cursor pointer
            padding 20px 20px
            position relative
            display: inline-block
            font-weight bold
            color grayC

            &::after 
                content: ''
                position absolute
                margin-bottom: 25px
                left 0
                bottom -20px
                width 100%
                border-bottom 3px solid mainC
                transform: scaleX(0)
                transition: all .3s linear

            &:hover::after
                transform: scaleX(1)
    .b-gallery__grid
        display flex
        flex-direction column
        .b-gallery__grid-wrap

            // .b-gallery__column
            //     flex 25%
            //     max-width 25%
            //     transition: all 1.3s ease
            //     //padding 0px 5px

            .b-gallery__item
                margin-bottom 5px
                .b-gallery__item-wrap
                    position relative
                    overflow hidden
                    transition: all 1.3s ease
                    &:hover .b-cover--hidden
                        transform: translateY(50%)
                        opacity 1.0
                    .b-gallery__img
                        vertical-align middle
                        width 100%

