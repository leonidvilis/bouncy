// Элементы управления

// Кнопки

// Круглые кнопки
.circle
    height 50px
    width 50px
    text-decoration none
    border-radius 50%
    background grayC
    text-align center
    display flex
    justify-content: center
    align-items: center
    transition: all .3s ease-in-out
    &:hover
        background mainC

// Buttons
.default-btn
    padding 6px 25px
    font-size: 1rem
    //display block-inline
    color grayDarkC
    border 1px solid  grayDarkC
    border-radius: 20px
    text-decoration: none
    transition: all .2s ease-in-out
    &:hover
        background-color mainC
        color lightC
        border-color mainC

//____________________________________________________________________________
// Accordeon Slider

itemsCount = 4 // поменять в зависимости от того сколько картинок в слайдере

.b-accordeon // Главный контейнер
    display flex
    width 100%
    height 100%

    &__item  // Элемент слайдера 
        height 100%
        width 25% 
        overflow hidden
        position relative
        transition all 0.7s ease 

        &:hover
            width 35%       

        &:hover .b-cover
            background rgba(0,0,0, 0.0)
            color rgba(0,0,0, 0.0)
            transform translateY(-100%)
        &__img
            display block
            height 100%

//______________________________________________________________________
// Блок для создания шторки на картинках
.b-cover
    position absolute
    top 0
    left 0
    width 100%
    height 100%
    background-color rgba(0,0,0, 0.7)
    z-index 3
    transition all 0.7s ease-in-out
    color grayC

    &__header
        margin 50px 15px
        font-family mainFont
        font-weight light
        font-size 20px

    &__text
        margin 135px 35px
        font-family secondFont 
        font-style italic
        width 400px

    &:hover
        transform: translateY(-100%)


//_______________________________________________________________
.b-cover--hidden
    position absolute
    top 0
    left 0
    width 100%
    height 100%
    background-color rgba(0,0,0, 0.7)
    z-index 3
    transform: translateY(-100%)
    opacity 0.0
    transition all 0.7s ease-in-out
    color grayC

    &__header
        margin 50px 15px
        font-family mainFont
        font-weight light
        font-size 20px

    &__text
        margin 135px 35px
        font-family secondFont 
        font-style italic
        width 400px

    &:hover
        transform: translateY(100%)

//________________________________________________________________________
// блок для создания слайдера с кнопками
.b-slider // Основной контейнер для элемента
    width 100%
    position relative
    margin auto

    .b-slider__dots
        margin 0 auto
        text-align center
        display flex
        justify-content center

        .b-slider__dot
            cursor pointer
            height 50px
            width 50px
            border-radius 50%
            background grayC
            text-align center
            display flex
            justify-content: center
            align-items: center
            transition: background-color .3s ease-in-out
            &:hover
                background mainC

            .icon
                font-size: 28px
                color lightC

        .b-slider__dot--active
            background mainC

    .b-slider__slides
        display flex
        flex-direction column
        text-align left

        .b-slider__slide
            display none
        
        .b-slider__slide--show
            display block
// Модификатры для второго слайдера    
.b-slider--row
    display flex
    .b-slider__dots--column
        flex-direction column
    .b-slider__slides--row
        flex-direction row
        .b-slider__slide--row
            display none
            flex-direction row
        .b-slider__slide--row--show
            display flex

