/*---------------------------------------*\
            #NAVBAR
\*---------------------------------------*/

.navbar-colored
    background rgba(mainC 0.9) 

#navbar.mobile
    background rgba(mainC 0.9)
    height 100vh
    .container
        .row
            display block
            .menu
                margin-top 40px
                display flex
                flex-direction column
                justify-content center
                li
                    a.menu-link
                        display inline-block
                        text-align right
                        font-size 2rem
                        border: none
                        border-radius: auto
                        box-sizing: border-box
                        &:hover
                            border-bottom 2px solid #fff

#navbar
    position fixed
    z-index 5
    height 90px
    width 100%
    color: #fff
    //background-color: #19bd9a;
    display: flex
    align-items: center
    transition: all 0.5s ease
    .container
        .row 
            a
                text-decoration: none
                color lightC

                .logo                
                    margin-left 23px
                
            .menu
                margin-right 25px 
                li
                    display inline-block
                    text-decoration none 
                    a.menu-link
                        display: block 
                        font-family mainFont
                        font-weight: lighter
                        text-decoration none
                        text-align: center
                        margin-right 2px
                        padding 10px 14px
                        color #fff
                        box-sizing: border-box
                        transition: all .3s ease-in-out
                        border: 1px solid rgba(255,255,255, 0)
                        border-radius: 25px
                        &:hover
                            border-color: #ffffff
    .menu-btn__container
        position fixed
        top 10px
        right 20px
        z-index 200
        display none
        .menu-btn 
            display block
            width 70px
            height 70px
            border-radius: 50%
            position relative
            cursor pointer
            background rgba(mainC, .5)
            span 
                display block
                position absolute
                top 50%
                left 50%
                margin-top -4px
                margin-left  -25px
                width 50px
                height 8px
                background #fff
                border-radius 4px
                transition: all .2s ease
                &::after
                    content ''
                    display block
                    width 50px
                    height 8px
                    background #fff
                    border-radius 4px
                    transition: all .5s ease
        &:hover
            span
                transform: rotate(45deg)
                &::after
                    transform rotate(90deg)
        .menu-btn-active
            border 2px solid lightC
            span
                transform: rotate(45deg)
                &::after
                    transform rotate(90deg)